<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>{{title}}</title>
</head>

<body>
    <nav>
        <h4>Project Management Database</h4>
        <ul>
            <li><a href="/auth/login">Home</a></li>
            <li><a href="/secret">Logout</a></li>
        </ul>
    </nav>
    <div class="table-data">
        <div class="container mt-4">
            <h2>Student Groups</h2>
            <table class="table table-bordered" id="groupTable">
                <thead style="background-color: #563d7c; color: rgb(244, 246, 248);">
                    <tr>
                        <th>Project</th>
                        <th>USN</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table body will be populated dynamically with JavaScript -->
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Fetch data from the server
        fetch('/auth/grouplist')
            .then(response => response.json())
            .then(data => {
                console.log('Received data from server:', data);

                // Handle the data as needed (e.g., update the UI)
                const tableBody = document.querySelector('#groupTable tbody');

                if (data.userData.length > 0) {
                    data.userData.forEach(group => {
                        const row = document.createElement('tr');
                        row.innerHTML = `
                            <td>${group.Project_Name}</td>
                            <td>${group.USN}</td>
                            <td>${group.Name}</td>
                        `;
                        tableBody.appendChild(row);
                    });
                } else {
                    tableBody.innerHTML = '<tr><td colspan="3">No Data Found</td></tr>';
                }
            })
            .catch(error => console.error('Error fetching data:', error));
    </script>
</body>

</html>
